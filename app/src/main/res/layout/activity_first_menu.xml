<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".FirstMenuActivity">

    <Button
        android:id="@+id/ExpressHRID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="Express HR"/>
    <Button
        android:id="@+id/expressInquiryID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="Express Inquiry"/>
    <Button
        android:id="@+id/expressRosterID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="Express Roster"/>
    <Button
        android:id="@+id/expressPayrollID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="Express Payroll"/>

</LinearLayout>